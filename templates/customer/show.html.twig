{% extends 'dashboard/index.html.twig' %}

{% block title %}Customer{% endblock %}

{% block content_page %}
<div class="col-md-10 m-auto">
    <h1 class="display-5">Customer</h1>
    <hr/>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>CompanyName</th>
                <td>{{ customer.companyName }}</td>
            </tr>
            <tr>
                <th>CompanyEmail</th>
                <td>{{ customer.companyEmail }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>CompanyAddress</th>
                <td>{{ customer.companyAddress }}</td>
            </tr>
            <tr>
                <th>BillingAddress</th>
                <td>{{ customer.billingAddress }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ customer.phoneNumber }}</td>
            </tr>
            <tr>
                <th>CompanyMail</th>
                <td>{{ customer.companyMail }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ customer.createAt ? customer.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CompanySiren</th>
                <td>{{ customer.companySiren }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customer_index') }}">back to list</a>

    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
</div>
{% endblock %}
