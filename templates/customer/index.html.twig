{% extends 'dashboard/index.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block content_page %}
<div class="col-md-7">
    <h1 class="display-5">Customers #{{customers|length}}</h1>
    <hr/>
    <table class="table table-striped w-25">
        <thead>
            <tr>
               <!-- <th>Id</th>-->
                <th>CompanyName</th>
                <th>CompanyEmail</th>
                <th>Name</th>
                <th>CompanyAddress</th>
                <th>BillingAddress</th>
                <th>PhoneNumber</th>
                <th>CompanyMail</th>
                <th>CreateAt</th>
                <th>CompanySiren</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
               <!-- <td>{{ customer.id }}</td>-->
                <td>{{ customer.companyName }}</td>
                <td>{{ customer.companyEmail }}</td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.companyAddress }}</td>
                <td>{{ customer.billingAddress }}</td>
                <td>{{ customer.phoneNumber }}</td>
                <td>{{ customer.companyMail }}</td>
                <td>{{ customer.createAt ? customer.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ customer.companySiren }}</td>
                <td>
                    <a href="{{ path('app_customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_new') }}">Create new</a>
</div>
{% endblock %}
