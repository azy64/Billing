{% extends 'dashboard/index.html.twig' %}

{% block title %}Dashboard - my Companies{% endblock %}

{% block content_page %}
<div class="col-md-11">
    <h1 class="display-5">My Companies [#{{app.user.companies|length }}]</h1>
    <hr/>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
               <!-- <th>Id</th>-->
                <th>Name</th>
                <th>Address</th>
                <th>BillAddress</th>
                <th>Siren</th>
                <th>PhoneNumber</th>
                <th>Logo</th>
                <th>Email</th>
                <th>CreateAt</th>
                <th colspan="200" width="200">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
               
                <td>{{ company.name }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.billAddress }}</td>
                <td>{{ company.siren }}</td>
                <td>{{ company.phoneNumber }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.createAt ? company.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td width="5em" colspan="100">
                    <a class="btn btn-sm btn-success" href="{{ path('app_company_show', {'id': company.id}) }}">show</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_company_new') }}">Create new</a>
</div>
{% endblock %}
